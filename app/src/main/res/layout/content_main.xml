<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.pinnacle_ic.jeff.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strTitle"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:autoText="false"
        style="@style/Title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strSpotify"
        android:id="@+id/btnSpotify"
        android:clickable="true"
        android:enabled="true"
        android:background="#F08C35"
        android:width="@dimen/button_width"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_alignEnd="@+id/btnCapstone"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:onClick="launchSpotifyApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strScores"
        android:id="@+id/btnScores"
        android:background="#F08C35"
        android:width="@dimen/button_width"
        android:layout_below="@+id/btnSpotify"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:onClick="launchScoresApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strLA"
        android:id="@+id/btnLibrary"
        android:background="#F08C35"
        android:width="@dimen/button_width"
        android:layout_below="@+id/btnScores"
        android:layout_alignRight="@+id/btnCapstone"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:onClick="launchLibraryApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strBIB"
        android:id="@+id/btnBIB"
        android:background="#F08C35"
        android:width="@dimen/button_width"
        android:layout_gravity="center"
        android:layout_below="@+id/btnLibrary"
        android:layout_alignLeft="@+id/btnLibrary"
        android:layout_alignStart="@+id/btnLibrary"
        android:layout_marginBottom="10dp"
        android:onClick="launchBIBApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strXYZ"
        android:id="@+id/btnXYZ"
        android:layout_below="@+id/btnBIB"
        android:background="#F08C35"
        android:width="@dimen/button_width"
        android:layout_alignLeft="@+id/btnBIB"
        android:layout_alignStart="@+id/btnBIB"
        android:layout_alignRight="@+id/btnBIB"
        android:layout_alignEnd="@+id/btnBIB"
        android:onClick="launchXYZApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strCapstone"
        android:id="@+id/btnCapstone"
        android:background="#d81c90"
        android:layout_below="@+id/btnXYZ"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/abc_action_bar_overflow_padding_end_material"
        android:textColor="#FFFFFF"
        android:width="@dimen/button_width"
        android:onClick="launchCapstoneApp" />
</RelativeLayout>
